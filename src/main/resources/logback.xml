<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>logs/testFile.log</file>
    <append>true</append>
    <encoder>
        <pattern>%d{yyyy-MM-dd HH:MM:SS} %-4relative [%thread] %-5level %logger{35} -%msg%n </pattern>
    </encoder>
</appender>
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>